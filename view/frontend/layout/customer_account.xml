<?xml version="1.0" encoding="utf-8" ?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Customer\Block\Account\SortLinkInterface" name="customer_account_navigation_todo_link">
                <arguments>
                    <argument name="path" xsi:type="string">todo</argument>
                    <argument name="label" xsi:type="string">My ToDo List</argument>
                    <argument name="sortOrder" xsi:type="number">215</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
